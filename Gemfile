source 'https://rubygems.org'

gem 'rails', '4.0.5'

# Database
gem 'mysql2'

# Model
gem 'mechanize'
gem 'nokogiri'

# Testing
group :development, :test do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'rspec-rails'
  gem 'factory_girl'
end

# Server
gem 'puma'
gem 'capistrano', group: :development

# UI
gem 'jquery-rails'
gem 'uglifier', '>= 1.3.0'
gem 'haml'